@model IEnumerable<TNS.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                    <img src="@item.Image" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Price</p>
                        <a href="/Product/Details/@item.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
